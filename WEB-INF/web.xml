<!-- this is to declare the JaasServlet used for authentication 
		 the init param is to be able to locate the jaas config file -->
	<servlet>
		<display-name>JAAS Login SErvlet</display-name>
		<servlet-name>JaasServlet</servlet-name>
		<servlet-class>org.cnio.appform.servlet.JaasServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
		
		<init-param>
			<param-name>jaasconfig.file</param-name>
			<param-value>appform.props</param-value>
		</init-param>
		
		<init-param>
			<param-name>jaastest</param-name>
			<param-value>thisisonlyatest</param-value>
		</init-param>
		
		<init-param>
			<param-name>max_login_attempts</param-name>
			<param-value>5</param-value>
		</init-param>
	</servlet>

	<servlet>
		<servlet-name>AjaxUtilServlet</servlet-name>
		<servlet-class>org.cnio.appform.servlet.AjaxUtilServlet</servlet-class>
	</servlet>
	
	<servlet>
		<description>This servlet handles ajax request for performance development</description>
		<display-name>IntrvServlet</display-name>
		
		<servlet-name>IntrvServlet</servlet-name>
		<servlet-class>org.cnio.appform.servlet.IntrvServlet</servlet-class>
	</servlet>
	
	<servlet>
		<description>"Simple" servlet to set the active groups</description>
		<display-name>MngGroupsServlet</display-name>
		
		<servlet-name>MngGroupsServlet</servlet-name>
		<servlet-class>org.cnio.appform.servlet.MngGroupsServlet</servlet-class>
	</servlet>
	
	<servlet>
		<description>Servlet to manage the data manager queries</description>
		<display-name>Query Servlet</display-name>
		
		<servlet-name>QryServlet</servlet-name>
		<servlet-class>org.cnio.appform.servlet.QryServlet</servlet-class>
	</servlet>
	
<!-- the two next servlets are used in password recovery protocol -->
	<servlet>
    <servlet-name>jcaptcha</servlet-name>
    <servlet-class>org.cnio.appform.servlet.ImgCaptchaServlet</servlet-class>
    <load-on-startup>0</load-on-startup>
  </servlet>
	
	<servlet>
    <servlet-name>MngPasswordServlet</servlet-name>
    <servlet-class>org.cnio.appform.servlet.MngPasswordServlet</servlet-class>
    <load-on-startup>0</load-on-startup>
		
		<init-param>
			<param-name>urlPassGet</param-name>
			<param-value>http://epi.bioinfo.cnio.es/appform/users/getpasswd?digest=</param-value>
		</init-param>
		
		<init-param>
			<param-name>resetPasswdLoc</param-name>
			<param-value>/appform/getpass</param-value>
		</init-param>
  </servlet>
	
