		</filter-class>
		<init-param>
			<param-name>docroot</param-name>
			<param-value>/web/jsp/index.jsp</param-value>
		</init-param>
 	</filter>
	
	<filter-mapping>
    <filter-name>AuthenticationFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>


